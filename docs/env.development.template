# Development Environment Variables
# Copy this to root/.env for local development

# Database
DATABASE_URL=postgresql://dev:devpass@localhost:5432/trading_platform

# Redis
REDIS_URL=redis://localhost:6379

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Market Data
FINNHUB_API_KEY=your-finnhub-key-here

# Broker (Alpaca)
ALPACA_API_KEY=your-alpaca-key
ALPACA_SECRET_KEY=your-alpaca-secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # paper trading

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Email (AWS SES)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SES_FROM_EMAIL=noreply@yourdomain.com

# Application
ENV=development
DEBUG=true
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:4200

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Kafka (for signal system)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_SIGNAL_TOPIC=trading-signals

# Subscription & Billing
ENFORCE_SUBSCRIPTION_LIMITS=false      # Set to true to enforce tier limits
DEFAULT_SUBSCRIPTION_TIER=enterprise   # Default tier for all users in dev mode

