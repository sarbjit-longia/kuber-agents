# Signal Generator Service Configuration

# Service
SERVICE_NAME=signal-generator
LOG_LEVEL=INFO

# Kafka (Phase 2)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SIGNAL_TOPIC=trading-signals

# Market Data
FINNHUB_API_KEY=your_finnhub_api_key_here

# Generator Settings
MOCK_GENERATOR_INTERVAL_SECONDS=60
GOLDEN_CROSS_CHECK_INTERVAL_SECONDS=300
GOLDEN_CROSS_SMA_SHORT=50
GOLDEN_CROSS_SMA_LONG=200
GOLDEN_CROSS_TIMEFRAME=D

# Config file paths
WATCHLIST_CONFIG_PATH=config/watchlist.json

# Note: Tickers are now configured in config/watchlist.json, not here
# This makes it easier to manage large watchlists

